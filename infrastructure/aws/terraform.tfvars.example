# LawFly Pro Production Configuration
# Copy this to terraform.tfvars and update with your values

# Environment Configuration
environment = "prod"
aws_region = "us-east-1"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
private_subnet_cidrs = [
  "10.0.1.0/24",   # AZ-a
  "10.0.2.0/24",   # AZ-b  
  "10.0.3.0/24"    # AZ-c
]
public_subnet_cidrs = [
  "10.0.101.0/24", # AZ-a
  "10.0.102.0/24", # AZ-b
  "10.0.103.0/24"  # AZ-c
]

# Security Configuration
enable_nat_gateway = true
enable_waf = true
enable_guard_duty = true
enable_security_hub = true
enable_backup = true

# Database Configuration  
postgres_instance_class = "db.r6g.xlarge"
postgres_allocated_storage = 500
postgres_backup_retention_period = 30

# Redis Configuration
redis_node_type = "cache.r7g.xlarge"

# EKS Configuration
eks_cluster_version = "1.28"
eks_node_group_instance_types = ["m6i.xlarge", "m6i.2xlarge"]
eks_node_group_capacity = {
  desired_size = 6
  max_size     = 20
  min_size     = 3
}

# Compliance & Backup
backup_retention_days = 2555  # 7 years for legal compliance
log_retention_days = 2555     # 7 years for audit logs

# Security Features
byok_enabled = true
hsm_enabled = true           # For enterprise customers
remote_render_enabled = true
dlp_enabled = true
siem_integration_enabled = true
zero_trust_enabled = true

# SSL Certificate (update with your domain)
ssl_certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT:certificate/CERTIFICATE-ID"
domain_name = "api.lawfly.pro"

# Tenant Isolation Strategy
tenant_isolation_strategy = "namespace"  # or "vpc" for enterprise

# Data Classification
data_classification = "confidential"

# Allowed IP ranges (update for your office/VPN)
allowed_cidr_blocks = [
  "203.0.113.0/24",  # Replace with your office IP range
  "198.51.100.0/24"  # Replace with your VPN IP range
]